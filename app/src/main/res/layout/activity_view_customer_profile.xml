<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".viewCustomerProfile">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="25dp"
        android:paddingBottom="50dp">



        <TextView
            android:id="@+id/head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Customer Profile"
            android:textColor="#0059b3"
            android:textSize="25sp"
            android:paddingBottom="15dp"
            />

        <TextView
            android:id="@+id/fname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/head"
            android:hint="Salman "
            android:textColor="#0059b3"
            android:textColorHint="#0059b3"
            android:paddingBottom="15dp"

            />

        <TextView
            android:id="@+id/lname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fname"
            android:hint="Tahir"
            android:textColor="#0059b3"
            android:textColorHint="#0059b3"
            android:paddingBottom="15dp"

            />

        <TextView
            android:id="@+id/cnic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lname"
            android:hint="3330165359013"
            android:textColor="#0059b3"
            android:textColorHint="#0059b3"
            android:paddingBottom="15dp"

            />

        <RadioGroup
            android:id="@+id/gender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cnic"
            android:orientation="vertical"
            android:paddingBottom="15dp"
            >

            <RadioButton
                android:id="@+id/male"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Male"
                android:textColor="#0059b3"
                android:paddingBottom="15dp"
                />

            <RadioButton
                android:id="@+id/female"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Female"
                android:textColor="#0059b3"
                android:paddingBottom="15dp"
                />
        </RadioGroup>

        <TextView
            android:id="@+id/phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/gender"
            android:hint="03496824090"
            android:textColor="#0059b3"
            android:textColorHint="#0059b3"
            android:paddingBottom="15dp"

            />

        <TextView
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/phone"
            android:hint="salmantahir@gmail.com"
            android:textColor="#0059b3"
            android:textColorHint="#0059b3"
            android:paddingBottom="15dp"

            />

        <TextView
            android:id="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/email"
            android:hint="h#487,st#498,lkadaslkd,gojrafhjasskl"
            android:textColor="#0059b3"
            android:textColorHint="#0059b3"
            android:paddingBottom="15dp"

            />

        <TextView
            android:id="@+id/user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/address"
            android:hint="Sallu"
            android:textColor="#0059b3"
            android:textColorHint="#0059b3"
            android:paddingBottom="15dp" />

        <Button
            android:id="@+id/next"
            android:onClick="editCustomerProfile"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/user"
            android:layout_centerHorizontal="true"
            android:layout_weight="1"
            android:text="Edit Profile"></Button>


    </RelativeLayout>
</ScrollView>